@using Microsoft.AspNetCore.Routing;

@{
}

<div class="dashboard-container container-lg">
    <div class="nav-left">
        <partial name="_Dashboard" />
    </div>
    <div class="overflow-auto dashboard-right">
        <div class="p-2 mb-4 border bg-light rounded">
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary btn-sm ml-2">Back</a>
        </div>

        <table>
            <tr>
                <td class="p-2">View By</td>
                <td>
                    <select>
                        <option>All Planning Area</option>
                    </select>
                </td>
                <td></td>
            </tr>
            <tr>
                <td align="right" class="p-2">Date</td>
                <td>
                    <input type="date" />
                    to
                    <input type="date" />
                </td>
                <td><span id="dateErrMsg" class="text-danger"></span></td>
            </tr>
        </table>

        <div class="mt-4 shadow bg-white rounded">
            <div class="pt-4 pl-4 pr-4 d-flex">
                <div class="w-50">
                    <p class="text-primary">
                        Activity Report
                    </p>
                </div>
                <div class="w-50 text-right">
                    <a id="allFilterOption" class="filter-option-active filterOption">All</a>
                    <a id="uploadFilterOption" class="filterOption">Upload</a>
                    <a id="downloadFilterOption" class="filterOption">Download</a>
                </div>
            </div>

            <hr class="hrNegativeMargin" />

            <div class="p-2">
                <table class="table table-striped table-borderless table-responsive" id="activityTable">
                    <thead>
                        <tr align="center">
                            <th></th>
                            <th>Project <br /> Location</th>
                            <th>
                                <a id="nameHeader" class="tableSort">
                                    Name
                                    <svg xmlns="http://www.w3.org/2000/svg" height="22" width="22" fill="none" id="nameFilter" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" id="nameASC" class="d-none bi bi-sort-alpha-up" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M10.082 5.629 9.664 7H8.598l1.789-5.332h1.234L13.402 7h-1.12l-.419-1.371h-1.781zm1.57-.785L11 2.687h-.047l-.652 2.157h1.351z" />
                                        <path d="M12.96 14H9.028v-.691l2.579-3.72v-.054H9.098v-.867h3.785v.691l-2.567 3.72v.054h2.645V14zm-8.46-.5a.5.5 0 0 1-1 0V3.707L2.354 4.854a.5.5 0 1 1-.708-.708l2-1.999.007-.007a.498.498 0 0 1 .7.006l2 2a.5.5 0 1 1-.707.708L4.5 3.707V13.5z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" id="nameDSC" class="d-none bi-sort-alpha-down-alt" viewBox="0 0 16 16">
                                        <path d="M12.96 7H9.028v-.691l2.579-3.72v-.054H9.098v-.867h3.785v.691l-2.567 3.72v.054h2.645V7z" />
                                        <path fill-rule="evenodd" d="M10.082 12.629 9.664 14H8.598l1.789-5.332h1.234L13.402 14h-1.12l-.419-1.371h-1.781zm1.57-.785L11 9.688h-.047l-.652 2.156h1.351z" />
                                        <path d="M4.5 2.5a.5.5 0 0 0-1 0v9.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L4.5 12.293V2.5z" />
                                    </svg>
                                </a>
                            </th>
                            <th>Email</th>
                            <th>
                                <a id="dateHeader" class="tableSort">
                                    Date
                                    <svg xmlns="http://www.w3.org/2000/svg" height="22" width="22" fill="none" id="dateFilter" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" id="dateASC" class="d-none bi bi-sort-up" viewBox="0 0 16 16">
                                        <path d="M3.5 12.5a.5.5 0 0 1-1 0V3.707L1.354 4.854a.5.5 0 1 1-.708-.708l2-1.999.007-.007a.498.498 0 0 1 .7.006l2 2a.5.5 0 1 1-.707.708L3.5 3.707V12.5zm3.5-9a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" id="dateDSC" class="d-none bi bi-sort-down-alt" viewBox="0 0 16 16">
                                        <path d="M3.5 3.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 12.293V3.5zm4 .5a.5.5 0 0 1 0-1h1a.5.5 0 0 1 0 1h-1zm0 3a.5.5 0 0 1 0-1h3a.5.5 0 0 1 0 1h-3zm0 3a.5.5 0 0 1 0-1h5a.5.5 0 0 1 0 1h-5zM7 12.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5z" />
                                    </svg>
                                </a>
                            </th>
                            <th>Time</th>
                            <th>Activity</th>
                        </tr>
                    </thead>
                    <tbody id="activityTableBody" class="text-center">

                    </tbody>
                </table>
            </div>

            <hr />

            <div class="pl-3 p-1">
                <nav>
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="active page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/ActivityReport.js"></script>
}